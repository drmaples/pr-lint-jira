{
  "name": "pr-lint-jira",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "github action to lint pr title + body",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "rm -rf ./dist && ncc build lib/main.js --source-map",
    "test": "jest",
    "all": "pnpm build && pnpm format && pnpm lint && pnpm test && pnpm package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drmaples/pr-lint-jira.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.12.0",
    "jest": "^30.2.0",
    "prettier": "3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
